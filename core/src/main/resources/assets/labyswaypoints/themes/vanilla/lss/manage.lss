TextField {
  top: 0;
  left: 0;
  height: 20;
  width: 100%;
  margin: 2 40 5 5;
}

.manage-container {
  top: 0;
  left: 50%;
  alignment-x: center;
  width: 100%;
  max-width: 300;
  height: 100%;
  clear-depth: true;

  .input-container {
    width: 90%;
    height: 180;
    left: 50%;
    top: 47%;
    alignment-x: center;
    alignment-y: center;

    background-color: rgba(20, 20, 20, 150);
    padding: 10;

    .title {
      left: 50%;
      top: 0;
      alignment-x: center;
    }

    &:has(.title) {
      padding-top: 5;
    }

    .custom-preview {
      top: 5;
      left: 50%;
      alignment-x: center;
      font-size: 1.5;
      padding: 2 3 2 3;
      background-color: black;
      min-width: 11;
    }

    .input-list {
      left: 0;
      top: 10;
      width: 100%;
      bottom: 0;
    }
  }
}

.input-name-list {
  left: 0;
  height: 30;
  width: 100%;

  .input-label {
    left: 0;
    top: 50%;
    alignment-y: center;
  }

  .input-text {
    left: 30;
    top: 50%;
    alignment-y: center;

    width: 100;
    height: 100%;

    box-sizing: border-box;
  }

  .input-color {
    left: 35 !important;
    top: 50% !important;
    alignment-y: center;
  }
}

.input-avatar {
  margin-top: -4;
  top: 0;
  left: 2;
  width: 16;
  height: width;
}

.remove-container {
  width: 90%;
  height: fit-content;
  left: 50%;
  top: 50%;
  alignment-x: center;
  alignment-y: center;
  space-between-entries: 15;

  background-color: rgba(20, 20, 20, 150);
  padding: 10;
}

.remove-confirmation {
  left: 50%;
  alignment-x: center;
}

.remove-preview {
  left: 50%;
  alignment-x: center;
  height: 24;
  width: 100%;
}

.remove-button-menu {
  left: 50%;
  alignment-x: center;
  height: 20;
  layout: fill;
  space-between-entries: 8;
  width: 90%;
}
