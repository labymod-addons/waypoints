.waypoints-overview-list {
  height: fit-content;
  selectable: true;

  .waypoints-list-header {
    height: fit-content;
  }
}

.waypoints-container {
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;

  Scroll {
    width: 90%;
    top: 0;
    bottom: 0;
    margin-top: 5;
    margin-bottom: 5;
    left: 50%;
    alignment-x: center;

    .waypoints-list {
      left: 0;
      top: 0;
      height: fit-content;
      space-between-entries: 2;
      selectable: true;
    }

    Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-left: 5;
    }
  }
}

Header {
  width: 100%;
  height: 24;
  padding: 1;
  border: 0 0 0 1 #2c2c2c;

  .checkbox {
    left: 4;
    top: 2;
    width: 16;
    height: width;
    clickable: true;
    margin-top: 2;
  }

  .title {
    left: 25;
    top: 50%;
    alignment-y: center;
  }
}

.waypoint-icon {
  height: 16 !important;
  width: 16 !important;
}

.waypoint-widget {
  width: 100%;
  height: 24;
  left: 25;
  orientation: horizontal;
  space-between-entries: 4;
  border: 1 rgba(0, 0, 0, 0);
  padding-right: 4;
  padding-left: 4;

  * {
    alignment-y: center;
  }

  .type {
    height: 80%;
    width: height;
  }

  .checkbox {
    width: 16;
    height: width;
    clickable: true;
    margin-right: 2;
  }

  .title {
    height: fit-content;
    min-height: 1;
  }

  &:selected {
    border: 1 gray;
    background-color: rgba(0, 0, 0, 0.45);
  }

  &.disabled {
    .avatar {
      opacity: 0.5;
    }

    .title {
      opacity: 0.5;
    }
  }
}

.overview-button-menu {
  width: 90%;
  height: 30;
  left: 50%;
  alignment-x: center;
  bottom: 5;
  layout: fill;
  space-between-entries: 8;
}

.edit-button-menu {
  width: 90%;
  height: 20;
  left: 50%;
  alignment-x: center;
  bottom: 0;
  layout: fill;
  space-between-entries: 8;
}
