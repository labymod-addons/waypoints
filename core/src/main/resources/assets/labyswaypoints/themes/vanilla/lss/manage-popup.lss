.popup-container {
  width: 230 !important;
  space-between-entries: 6 !important;

  .popup-title {
    text-color: white;
    margin-bottom: 4;
  }

  .popup-button-container {
    margin-top: 4;
  }

  Waypoint {
    background-color: rgba(209, 209, 209, 0.15);
    border: 1 gray !important;
  }

  .labeled-widget {
    height: fit-content;
    margin: 0;
    width: fit-content;
    space-between-entries: 2;

    Component {
      max-width: 100%;
    }

    TextField, NumberTextField {
      width: 100%;
      clear-button: false;
    }

    .icon-picker {
      width: 20;
      height: 20;

      Icon {
        width: 16;
        height: 16;
      }
    }

    &:has(ColorPicker) {
      overwrite-width: false;
    }
  }

  .horizontal-wrapper {
    width: 100%;
    orientation: horizontal;
    height: fit-content;
    space-between-entries: 6;
  }
}

.icon-picker-grid {
  width: fit-content;
  height: fit-content;
  columns: 7;
  rows: 7;
  background-color: black;
  border: 1 white;
  padding: 1;
  iterate: horizontal;

  Icon {
    width: 16;
    height: 16;
    padding: 1;
    clickable: true;

    &:hover {
      background-color: rgba(255, 255, 255, 0.3);
    }
  }
}